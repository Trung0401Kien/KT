@model WebDoAn.Models.CreateAccountViewModel
@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" type="text/css" href="~/Content/asset/styles/main_styles.css">
<div class="container news_section_container">
        <div class="row">
            <div class="col-md-12">
                <h2>Thông tin cá nhân</h2>
                @using (Html.BeginForm("PostProfile", "Account"))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(false)
                    <div class="form-group">
                        <label for="exampleInputEmail1">Họ và Tên</label>
                        <input type="text" class="form-control" name="FullName"  aria-describedby="emailHelp" value="@Model.FullName">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">UserName</label>
                        <input type="text" class="form-control" name="UserName" aria-describedby="emailHelp" value="@Model.UserName" readonly>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Số Điện Thoại</label>
                        <input type="text" class="form-control" name="Phone" aria-describedby="emailHelp" value="@Model.Phone">
                        <small id="emailHelp" class="form-text text-muted">We'll never share your phone with anyone else.</small>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Email</label>
                        <input type="text" class="form-control" name="Email" aria-describedby="emailHelp" value="@Model.Email" readonly>
                        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-outline-success">Cập nhật</button>
                    </div>
                }
            </div>
        </div>
</div>
    <style>
        .news_section_container {
            margin-top: 180px;
        }

        .row-item-new {
            margin-bottom: 20px;
        }

        .title-news {
            font-size: 24px;
            border-bottom: 1px solid;
            padding: 15px 0;
            margin-bottom: 25px;
        }

        .img-box img {
            max-width: 100%;
            max-height: 100%;
        }
    </style>
